<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android" android:focusableInTouchMode="true"
        android:focusable="true">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent">
    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="نام:"
            android:id="@+id/textView1"/>
    <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editText1" android:maxLength="150"/>
    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="نام خانوادگی:"
            android:id="@+id/textView2"/>
    <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editText2" android:maxLength="150"/>
    <TextView android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="نام کاربری:"
              android:id="@+id/textView3"/>
    <EditText android:layout_width="fill_parent" android:layout_height="wrap_content" android:id="@+id/editText3"
              android:maxLength="150" android:enabled="false"/>
    <TextView android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="رمز عبور:"
              android:id="@+id/textView4"/>
    <EditText android:layout_width="fill_parent" android:layout_height="wrap_content" android:id="@+id/editText4" android:password="true"
              android:maxLength="150" android:enabled="false" android:editable="false"/>
    <TextView android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="آدرس:"
              android:id="@+id/textView5"/>
    <EditText android:layout_width="fill_parent" android:layout_height="wrap_content" android:id="@+id/editText5"
              android:maxLength="150"/>
    <TextView android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="ایمیل:"
              android:id="@+id/textView6"/>
    <EditText android:layout_width="fill_parent" android:layout_height="wrap_content" android:id="@+id/editText6"
              android:maxLength="150"/>
    <TextView android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="تلفن:"
              android:id="@+id/textView7"/>
    <EditText android:layout_width="fill_parent" android:layout_height="wrap_content" android:id="@+id/editText7"
              android:maxLength="150" android:phoneNumber="false" android:numeric="decimal"/>
    <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="به روز رسانی"
            android:id="@+id/btnReg"/>


</LinearLayout>
</ScrollView>